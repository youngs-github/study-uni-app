.backtop-wrapper {
  width: 36px;
  height: 36px;
  right: 15px;
  border: 1px solid #bbb;
  bottom: 66px;
  z-index: 10;
  position: fixed;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  background-color: #fff;
}
.backtop-wrapper .box {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.backtop-wrapper .icon {
  color: #666;
  margin: 0;
  padding: 0;
  font-size: 26px;
}
.backtop-wrapper .none {
  display: none;
}

